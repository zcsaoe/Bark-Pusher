{
  "manifest_version": 3,
  "name": "Bark Pusher",
  "description": "Push content to iOS via Bark app.",
  "homepage_url": "https://github.com/Mongkii/Bark-Pusher",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "action": {
    "default_icon": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "default_title": "Bark Pusher",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardRead",
    "storage",
    "notifications",
    "tabs"
  ],
  "background": {
    "service_worker": "background.ts"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "options/index.html"
  }
}